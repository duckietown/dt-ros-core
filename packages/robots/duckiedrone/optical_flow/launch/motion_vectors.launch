<launch>

<arg name="veh"/>
<arg name="input_image_topic" default="/$(arg veh)/camera_node"/>

<arg name="output_image_topic" default="$(arg input_image_topic)/image_raw"/>
<arg name="camera_info_topic" default="$(arg input_image_topic)/camera_info"/>

    <!-- Convert input compressed image to raw image -->
    <node pkg="image_transport" type="republish" name="republish_node" output="screen" args="compressed in:=$(arg input_image_topic) raw out:=$(arg output_image_topic)">
    </node>

    <!-- Binning and ROI selection of the image -->
    <node name="resized" pkg="nodelet" type="nodelet"
        args="standalone image_proc/crop_decimate"
        output="screen">

        <remap from="camera/image_raw" to="$(arg output_image_topic)" />
        <remap from="camera/camera_info" to="$(arg camera_info_topic)" /> 
        <param name="decimation_x" value="8" />
        <param name="decimation_y" value="8" />
        <param name="y_offset" value="320" />
        <param name="height" value="320" />
        <param name="width" value="480" />
    </node>

    <node pkg="opencv_apps" type="fback_flow" name="fback_flow_node">
        <remap from="camera/camera_info" to="camera_out/camera_info" />
        <remap from="image" to="camera_out/image_raw" />
    </node>
</launch>
